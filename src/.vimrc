set nocompatible

colorscheme twilight

set laststatus=2
set showmode
set showcmd
set ruler
set relativenumber
set modeline
set showmatch

set nowrap
set expandtab
set shiftwidth=4
set softtabstop=4
set smarttab
set autoindent
set shiftround

set hlsearch
set incsearch
set ignorecase
set smartcase

filetype plugin indent on

call pathogen#infect()
